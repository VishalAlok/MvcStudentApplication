@{
}
@model MvsStudentApplication.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No Student was found with this id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label>Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label>Phone</label>
            <input type="number" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="IsActive" asp-for="IsActive" />
            <label class="form-check-label for="IsActive">IsActive</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}